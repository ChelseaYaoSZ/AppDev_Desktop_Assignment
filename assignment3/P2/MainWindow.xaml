<Window x:Class="P2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2"
        mc:Ignorable="d"
        Title="Fast Freight Shipping" Height="450" Width="800">
    <Grid>
        <Label Content="Weight of Package(kg)" HorizontalAlignment="Left" Height="41" Margin="122,86,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="weight" HorizontalAlignment="Left" Height="29" Margin="332,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>
        <Label Content="Distance(miles)" HorizontalAlignment="Left" Height="32" Margin="122,162,0,0" VerticalAlignment="Top" Width="131"/>
        <TextBox x:Name="distance" HorizontalAlignment="Left" Height="32" Margin="332,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>
        <Button Content="Calculate Fees" HorizontalAlignment="Left" Height="32" Margin="179,240,0,0" VerticalAlignment="Top" Width="173" Click="Button_Click"/>

    </Grid>
</Window>
